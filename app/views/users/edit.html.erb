<div class="container-image">
  <div class="row no-gutters">
    <div class="d-flex justify-content-center col-xs-12 col-sm-6 offset-sm-3">
      <div class="form-post">
        <h1>My profile</h1>
        <div class="row">
          <div class="col-sm-12">
            <%= simple_form_for(@user) do |f| %>
              <%= f.input :first_name%>
              <%= f.input :last_name%>
              <%= f.input :age%>
              <%= f.input :nationality%>
              <%= f.input :ranking%>
              <%= f.submit "Update profile", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
